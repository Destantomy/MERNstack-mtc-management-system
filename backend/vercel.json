{
  "version": 2,
  "builds": [
    {
      "src": "sources/**/*.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/sources/(.*)",
      "dest": "sources/routes/routes.ts",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/(.*)",
      "dest": "sources/server.js"
    }
  ]
}
